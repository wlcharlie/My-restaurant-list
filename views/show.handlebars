<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">

    <div class="d-flex justify-content-around align-items-center mx-auto text-light">
      <div class="border border-white h-75 "></div>
      <div class="px-5 ml-3">

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          {{restaurant.category}}
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          {{restaurant.location}}
          <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          {{restaurant.phone}}
        </p>

        <p class="mt-5 mb-5 w-100">
          {{restaurant.description}}
        </p>
      </div>
      <div class="border border-white h-25 mr-5"></div>
      <div>
        <img class="rounded mx-auto d-block w-150" src="{{restaurant.image}}" alt="{{restaurant.name}}"
          style="max-width: 600px;">
      </div>
    </div>
  </div>
</div>