<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="container text-light">

    <div class="row align-items-center">

      <div class="col-sm d-flex flex-column justify-content-center align-items-start mx-auto mb-2 font-weight-bolder"
        style="min-width: 300px;">
        <h3 class="mb-2">{{restaurant.name}} <span class="font-weight-normal">({{restaurant.name_en}})</span></h3>
        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          {{restaurant.category}}
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          {{restaurant.location}}
          <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          {{restaurant.phone}}
        </p>

        <p class="border-top border-light my-3 py-3 w-100">
          <i>{{restaurant.description}}</i>
        </p>
      </div>

      <div class="col-sm d-flex flex-column justify-content-center mb-5 mx-auto">
        <img class="img-fluid rounded d-block" src="{{restaurant.image}}" alt="{{restaurant.name}}"
          style="min-width: 300px;">
      </div>

    </div>

  </div>
</div>