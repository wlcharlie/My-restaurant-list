<h1 class="mb-1 restaurant-show-title">{{theRestaurant.name}}</h1>
<div class="container">
  <div class="container text-light">

    <div class="row align-items-center">

      <div class="col-sm d-flex flex-column justify-content-center align-items-start mx-auto mb-2 font-weight-bolder"
        style="min-width: 300px;">
        <h3 class="mb-2">{{theRestaurant.name}} <span class="font-weight-normal">({{theRestaurant.name_en}})</span></h3>
        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          {{theRestaurant.category}}
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          {{theRestaurant.location}}
          <a href="{{theRestaurant.google_map}}" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          {{theRestaurant.phone}}
        </p>

        <p class="border-top border-light my-3 py-3 w-100">
          <i>{{theRestaurant.description}}</i>
        </p>
      </div>

      <!-- Double Check Modal -->
      <div class="modal fade text-dark" id="doubleCheck" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="doubleCheckLabel">刪除確認</h5>
              <button type="button" class="close" data-dismiss="modal">
                <span>&times;</span>
              </button>
            </div>
            <div class="modal-body">
              您確定真的要刪除嗎?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">不刪</button>
              <form action="/restaurants/{{theRestaurant.id}}/delete" method="POST"><button type="submit"
                  class="btn btn-danger">確認刪除</button></form>
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm d-flex flex-column justify-content-center mb-5 mx-auto">
        <img class="img-fluid rounded d-block" src="{{theRestaurant.image}}" alt="{{theRestaurant.name}}"
          style="min-width: 300px;">
      </div>
      <div class="container mb-5 d-flex justify-content-end">

        <div class="dropup">
          <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown">
            功能選單
          </button>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="/restaurants/{{theRestaurant.id}}/edit">編輯</a>
            <a class="dropdown-item text-danger" href="#" data-toggle="modal" data-target="#doubleCheck">
              移除
            </a>
          </div>
        </div>
        <div class="mx-2">
          <a href="../">
            <button type="button" class="btn btn-secondary">返回</button>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>